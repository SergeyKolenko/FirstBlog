<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
<div class='container'>
  <div class="row">
    <% if user_signed_in? %>
        <div class="pull-right">

          <strong><%= current_user.email %></strong><br />
          <%= link_to  "Sign out", destroy_user_session_path,:method => :delete, :class => "btn btn-primary pull-right" %>
        </div>
    <%else%>
        <%= link_to "Sign in" ,new_user_session_path, :class=>"btn btn-success pull-right" %>
    <%end%>
    </div>
  <div class="row-fluid">
    <div class="span3 offset5">
        <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
